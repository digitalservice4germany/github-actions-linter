{
  "name": "github-actions-linter",
  "private": false,
  "version": "0.1.2",
  "description": "Linting for GitHub Actions workflows",
  "main": "index.js",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint:check": "eslint --ext .cjs,.js --ignore-path .gitignore .",
    "lint:fix": "npm run lint:check -- --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --ignore-unknown .",
    "release": "release-it"
  },
  "type": "module",
  "contributors": [
    {
      "name": "Pram Gurusinga",
      "email": "pratama.gurusinga@digitalservice.bund.de"
    },
    {
      "name": "Klaus Hartl",
      "email": "klaus.hartl@digitalservice.bund.de"
    },
    {
      "name": "Christian Kaatz",
      "email": "christian.kaatz@digitalservice.bund.de"
    }
  ],
  "bin": {
    "github-actions-linter": "./cli.js"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.0.1",
    "glob": "^8.0.3",
    "yamljs": "^0.3.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "release-it": "^15.1.0"
  }
}
